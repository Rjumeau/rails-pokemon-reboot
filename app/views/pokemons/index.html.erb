  <div class="row gap-3">
    <% @pokemons.each do |pokemon| %>
      <div class="card" style="width: 18rem;">
      <!-- <img src="..." class="card-img-top" alt="...">-->
      <%= cl_image_tag pokemon.photo.key, class: 'card-img-top' %>
